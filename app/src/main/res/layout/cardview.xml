<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_marginBottom="5dp"
    android:orientation="vertical">

    <android.support.v7.widget.CardView
        android:id="@+id/cardView"
        android:layout_width="match_parent"
        android:layout_height="160dp"
        card_view:cardBackgroundColor="@android:color/holo_orange_light"
        card_view:cardCornerRadius="10dp"
        card_view:cardElevation="10dp"
        card_view:contentPadding="2dp">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"

            android:clickable="true">

            <ImageView
                android:id="@+id/cardImage"
                android:layout_width="160dp"
                android:layout_height="120dp"
                android:layout_alignParentEnd="true"
                android:layout_alignParentRight="true"
                android:layout_alignTop="@+id/cardTitle"

                card_view:srcCompat="@drawable/marker" />

            <TextView
                android:id="@+id/cardTitle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true"
                android:layout_alignParentTop="true"
                android:layout_marginLeft="20dp"
                android:layout_marginStart="20dp"
                android:layout_marginTop="16dp"
                android:clickable="false"
                android:text="TextView"
                android:textColor="#000"
                android:textSize="24sp" />

            <TextView
                android:id="@+id/cardSubtext"
                android:layout_width="160dp"
                android:layout_height="wrap_content"
                android:layout_alignLeft="@+id/cardTitle"
                android:layout_alignStart="@+id/cardTitle"
                android:layout_below="@+id/cardTitle"
                android:layout_marginTop="16dp"
                android:text="TextView"
                android:textColor="#000"
                android:textSize="14sp" />

        </RelativeLayout>
    </android.support.v7.widget.CardView>

</LinearLayout>