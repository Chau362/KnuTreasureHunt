<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#fff"
    tools:context="pearsistent.knutreasurehunt.Tab1_admin">

    <!-- TODO: Update blank fragment layout -->

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:orientation="horizontal"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true">

        <ImageButton
            android:id="@+id/removeItemBtn"
            android:layout_width="1dp"
            android:layout_height="72dp"
            android:layout_weight="0.15"
            android:background="#ffcb3a"
            app:srcCompat="@drawable/ic_delete_white_36dp" />

        <ImageButton
            android:id="@+id/addItemBtn"
            android:layout_width="44dp"
            android:layout_height="match_parent"
            android:layout_weight="0.11"
            android:background="#ffcb3a"
            app:srcCompat="@drawable/ic_add_circle_white_36dp" />

    </LinearLayout>

    <Button
        android:id="@+id/createlist"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginBottom="18dp"
        android:layout_weight="1"
        android:background="#ffcb3a"
        android:clickable="true"
        android:text="Create List"
        android:textSize="16sp" />

    <ListView
        android:id="@+id/objectList"
        android:layout_width="match_parent"
        android:layout_height="350dp"
        android:layout_marginBottom="14dp"
        android:layout_above="@+id/createlist"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

</RelativeLayout>
