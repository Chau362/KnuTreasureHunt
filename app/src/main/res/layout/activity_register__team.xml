<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="pearsistent.knutreasurehunt.RegisterTeamActivity"
    android:background="#fff"
    android:orientation="vertical">
        <Space
            android:layout_width="match_parent"
            android:layout_height="70dp" />

    <TextView
        android:id="@+id/register_team_title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Registration"
        android:textColor="#000"
        android:textStyle="bold"
        android:textAlignment="center"
        android:textSize="28dp" />

        <Space
            android:layout_width="match_parent"
            android:layout_height="40dp" />

        <EditText
            android:id="@+id/rgstr_team_usr"
            android:layout_width="250dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:ems="10"
            android:hint="Username"
            android:textColorHint="#B5B5B5"
            android:backgroundTint="#B5B5B5"
            android:textColor="@color/common_google_signin_btn_text_dark_focused"
            android:inputType="textPersonName"
            android:textAlignment="center" />

        <Space
            android:layout_width="match_parent"
            android:layout_height="30dp" />

    <EditText
        android:id="@+id/regtr_team_account"
        android:layout_width="250dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:ems="10"
        android:hint="Account(E-mail)"
        android:textColorHint="#B5B5B5"
        android:backgroundTint="#B5B5B5"
        android:textColor="@color/common_google_signin_btn_text_dark_focused"
        android:inputType="textPersonName"
        android:textAlignment="center" />

    <Space
        android:layout_width="match_parent"
        android:layout_height="30dp" />

    <EditText
        android:id="@+id/rgstr_team_pwd"
        android:layout_width="250dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:textColor="@color/common_google_signin_btn_text_dark_focused"
        android:backgroundTint="#B5B5B5"
        android:ems="10"
        android:hint="Password"
        android:inputType="textPersonName"
        android:textAlignment="center"
        android:textColorHint="#B5B5B5" />

    <Space
            android:layout_width="match_parent"
            android:layout_height="30dp" />

        <EditText
            android:id="@+id/rgstr_team_cpwd"
            android:layout_width="250dp"
            android:layout_height="wrap_content"
            android:textColor="@color/common_google_signin_btn_text_dark_focused"
            android:layout_gravity="center"
            android:ems="10"
            android:hint="Confirmation Password"
            android:textColorHint="#B5B5B5"
            android:backgroundTint="#B5B5B5"
            android:inputType="textPersonName"
            android:textAlignment="center" />

        <Space
            android:layout_width="match_parent"
            android:layout_height="30dp" />

    <EditText
        android:id="@+id/rgstr_teamname"
        android:layout_width="250dp"
        android:layout_height="wrap_content"
        android:ems="10"
        android:inputType="textPersonName"
        android:hint="TeamName"
        android:textColorHint="#B5B5B5"
        android:textColor="@color/common_google_signin_btn_text_dark_focused"
        android:backgroundTint="#B5B5B5"
        android:layout_gravity="center"
        android:textAlignment="center"
        />

    <Space
        android:layout_width="match_parent"
        android:layout_height="30dp" />

    <Button
            android:id="@+id/Btn_rgstr_team_Register"
            android:layout_width="180dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:textStyle="bold"
            android:background="@drawable/registerbuttonborder"
            android:text="Register" />
</LinearLayout>
