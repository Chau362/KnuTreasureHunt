<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#fff"
    tools:context="pearsistent.knutreasurehunt.Register_admin"
    android:orientation="vertical">

    <Space
        android:layout_width="match_parent"
        android:layout_height="70dp" />

    <TextView
        android:id="@+id/register_admin_title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Registration"
        android:textColor="#000"
        android:textStyle="bold"
        android:textAlignment="center"
        android:textSize="28dp" />

    <Space
        android:layout_width="match_parent"
        android:layout_height="40dp" />

    <EditText
        android:id="@+id/rgstr_admin_usr"
        android:layout_width="250dp"
        android:layout_height="wrap_content"
        android:ems="10"
        android:hint="Username"
        android:textColorHint="#B5B5B5"
        android:backgroundTint="#B5B5B5"
        android:inputType="textPersonName"
        android:textAlignment="center"
        android:layout_gravity="center"/>

    <Space
        android:layout_width="match_parent"
        android:layout_height="30dp" />

    <EditText
        android:id="@+id/rgstr_admin_pwd"
        android:layout_width="250dp"
        android:layout_height="wrap_content"
        android:ems="10"
        android:hint="Password"
        android:textColorHint="#B5B5B5"
        android:backgroundTint="#B5B5B5"
        android:inputType="textPersonName"
        android:textAlignment="center"
        android:layout_gravity="center"/>

    <Space
        android:layout_width="match_parent"
        android:layout_height="30dp" />

    <EditText
        android:id="@+id/rgstr_admin_cpwd"
        android:layout_width="250dp"
        android:layout_height="wrap_content"
        android:ems="10"
        android:hint="Confirmation Password"
        android:inputType="textPersonName"
        android:textAlignment="center"
        android:textColorHint="#B5B5B5"
        android:backgroundTint="#B5B5B5"
        android:layout_gravity="center"/>

    <Space
        android:layout_width="match_parent"
        android:layout_height="50dp" />

    <Button
        android:id="@+id/Btn_rgstr_admin_Register"
        android:layout_width="180dp"
        android:layout_height="wrap_content"
        android:text="Register"
        android:textStyle="bold"
        android:background="@drawable/registerbuttonborder"
        android:layout_gravity="center"/>
</LinearLayout>
