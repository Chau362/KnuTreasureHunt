<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:background="#fff"
    android:layout_height="match_parent"
    tools:context="pearsistent.knutreasurehunt.RegistrationActivity"
    tools:layout_editor_absoluteY="25dp"
    tools:layout_editor_absoluteX="0dp"
    android:paddingLeft="16dp"
    android:paddingRight="16dp"
    android:orientation="vertical">

    <Space
        android:layout_width="match_parent"
        android:layout_height="100dp" />



        <TextView
        android:id="@+id/teamHeadline"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="TEAM"
        android:textStyle="bold"
        android:textColor="#000"
        android:textAlignment="center"
        android:textSize="18sp" />

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/listborder">

    <LinearLayout
        android:id="@+id/teamRegistrationBlock"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:clickable="true"
        android:paddingTop="4dp"
        android:paddingBottom="4dp"
        android:orientation="horizontal"
        >

        <ImageView
            android:id="@+id/userRegistrationImage"
            android:background="@drawable/itemborder"
            android:layout_width="250dp"
            android:layout_height="100dp"
            android:layout_weight="1" />
        <!--app:srcCompat="@mipmap/user" -->

        <FrameLayout
            android:layout_width="3dp"
            android:layout_height="match_parent">
        </FrameLayout>

        <TextView
            android:id="@+id/text_usr"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@drawable/itemborder"
            android:textColor="#000"
            android:textSize="15dp"
            android:gravity="center_vertical"
            android:text="Choose this if you want to participate as the team leader in the Treasure Hunt"
            />

    </LinearLayout>
    </LinearLayout>

    <Space
        android:layout_width="match_parent"
        android:layout_height="86dp" />


    <TextView
        android:id="@+id/adminHeadline"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="ADMINISTRATOR"
        android:textSize="18dp"
        android:textColor="#000"
        android:textStyle="bold"
        android:textAlignment="center"/>
    <LinearLayout
        android:orientation="vertical"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/listborder">

    <LinearLayout
        android:id="@+id/adminRegistrationBlock"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:clickable="true"
        android:paddingTop="4dp"
        android:paddingBottom="4dp"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/adminRegistrationImage"
            android:layout_width="250dp"
            android:layout_height="100dp"
            android:background="@drawable/itemborder"
            android:layout_weight="1"/>
            <!--app:srcCompat="@mipmap/admin" -->

        <FrameLayout
            android:layout_width="3dp"
            android:layout_height="match_parent">
        </FrameLayout>


        <TextView
            android:id="@+id/text_admin"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@drawable/itemborder"
            android:gravity="center_vertical"
            android:text="Choose this if you want to register as an administrator for the Treasure Hunt"
            android:textColor="#000"
            android:textSize="15dp" />

    </LinearLayout>
        </LinearLayout>

</LinearLayout>
